package Free_Drawing.menu;


import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.control.*;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.text.Font;
import javafx.scene.text.Text;
import javafx.stage.Stage;

public class New_Morphism extends Application {

    public static Button create;
    public static TextField node1Text;
    public static TextField node2Text;

    public void start(Stage new_morphism) {
        new_morphism.setWidth(700);
        new_morphism.setHeight(500);
        new_morphism.setTitle("New Morphism");

        VBox newMorphVBox = new VBox();
        newMorphVBox.getStyleClass().add("background");
        Scene newMorphScene = new Scene(newMorphVBox);
        newMorphScene.getStylesheets().add("Login/Styles.css");

        new_morphism.setScene(newMorphScene);
        new_morphism.show();

        /////////////////

        HBox chooseHBox = new HBox();
        chooseHBox.setMinHeight(100);
        chooseHBox.setMinWidth(700);
        chooseHBox.setAlignment(Pos.CENTER_LEFT);
        HBox nodesHBox = new HBox();
        nodesHBox.setMinHeight(100);
        nodesHBox.setMinWidth(700);
        nodesHBox.setAlignment(Pos.CENTER_LEFT);
        HBox createHBox = new HBox();
        createHBox.setMinHeight(100);
        createHBox.setMinWidth(700);
        createHBox.setAlignment(Pos.CENTER);


        Label chooseLabel = new Label("     Choose the vertices:");
        chooseLabel.setStyle("-fx-font-size: 30 px");
        Label node1 = new Label("     Vertex1:    ");
        node1.setStyle("-fx-font-size: 30 px");
        Label node2 = new Label("            Vertex2:   ");
        node2.setStyle("-fx-font-size: 30 px");


        node1Text = new TextField();
        node1Text.setPromptText("ID...");
        node1Text.setMinHeight(25);
        node1Text.setPrefWidth(100);
        node2Text = new TextField();
        node2Text.setPromptText("ID...");
        node2Text.setMinHeight(25);
        node2Text.setPrefWidth(100);

        create = new Button();
        create.setStyle("-fx-font-size: 22 px");
        create.getStyleClass().add("button-create");


        createHBox.getChildren().addAll(create);
        chooseHBox.getChildren().addAll(chooseLabel);
        nodesHBox.getChildren().addAll(node1, node1Text, node2, node2Text);
        newMorphVBox.getChildren().addAll(chooseHBox, nodesHBox);
    }
}
