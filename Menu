import javax.swing.*;
import java.awt.event.*;
import javax.swing.JFrame;

/**
 * @author alessioborgi
 * @created 03 / 05 / 2021 - 16:01
 * @project LOGIN
 */

public class Menu extends JFrame implements ActionListener {

    public static java.awt.Color bordeaux = new java.awt.Color(110, 34, 44);
    JFrame frame = new JFrame();
    JPanel panel = new JPanel();

    ImageIcon java = new ImageIcon("img/java_2.png");
    ImageIcon cat = new ImageIcon("img/Programming_1.jpeg");
    ImageIcon sapienza_img = new ImageIcon("img/Sapienza.png");
    ImageIcon acs = new ImageIcon("img/ACSAI_1.jpeg");

    JLabel cat_label = new JLabel();
    JLabel acsai = new JLabel();
    JLabel sapienza = new JLabel();
    JLabel sapienza_1 = new JLabel();
    JLabel java_item = new JLabel();
    JLabel java_item_1 = new JLabel();

    JMenuBar menu = new JMenuBar();
    JMenu Create = new JMenu("Create");
    JMenu Draw = new JMenu("Draw");
    JMenu Help = new JMenu("Help");
    JMenuItem Object = new JMenuItem("New Object");
    JMenuItem Morphism = new JMenuItem("New Morphism");
    JMenuItem Composition = new JMenuItem("Composition");
    JTextArea text = new JTextArea();

    public Menu() {
        setter();
        adder();
        addListeners();
    }


    private void setter(){
        frame.setBounds(10, 10,800, 800);
        panel.setBackground(bordeaux);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setTitle("Login");
        panel.setLayout(null);

        java_item.setBounds(0, 20, 160, 75);
        java_item.setIcon(java);
        cat_label.setBounds(160, 20, 480, 75);
        cat_label.setIcon(cat);
        java_item_1.setBounds(640, 20, 160, 75);
        java_item_1.setIcon(java);

        sapienza.setBounds(0, 650, 160, 100);
        sapienza.setIcon(sapienza_img);
        acsai.setBounds(160, 650, 480, 100);
        acsai.setIcon(acs);
        sapienza_1.setBounds(640, 650, 160, 100);
        sapienza_1.setIcon(sapienza_img);

        text.setBounds(5,5,360,320);
        frame.setJMenuBar(menu);
        frame.setVisible(true);
    }

    private void adder(){
        frame.add(panel);
        panel.add(menu);

        panel.add(java_item);
        panel.add(cat_label);
        panel.add(java_item_1);

        Create.add(Object);
        Create.add(Morphism);
        Create.add(Composition);

        menu.add(Create);
        menu.add(Draw);
        menu.add(Help);

        panel.add(sapienza);
        panel.add(acsai);
        panel.add(sapienza_1);
    }


    private void addListeners(){
        Object.addActionListener(this);
        Morphism.addActionListener(this);
        Composition.addActionListener(this);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if(e.getSource()== Object)
            text.cut();
            //Object o = new Object();
        if(e.getSource()== Composition)
            text.paste();
            //Compose c = new Compose();
        if(e.getSource()== Morphism)
            text.copy();
            //Morphism m = new Morphism();
    }
}


